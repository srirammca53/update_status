<h1>Listing banks</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Account number</th>
    <th>Account type</th>
    <th>Address</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @banks.each do |bank| %>
  <tr>
    <td><%= bank.name %></td>
    <td><%= bank.account_number %></td>
    <td><%= bank.account_type %></td>
    <td><%= bank.address %></td>
    <td><%= link_to 'Show', bank %></td>
    <td><%= link_to 'Edit', edit_bank_path(bank) %></td>
    <td><%= link_to 'Destroy', bank, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

