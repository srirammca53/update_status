<h1>Listing users</h1>

<table>
  <tr>
    <th>Username</th>
    <th>Password</th>
    <th>Age</th>
    <th>Email</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @users.each do |user| %>
  <tr>
    <td><%= user.username %></td>
    <td><%= user.password %></td>
    <td><%= user.age %></td>
    <td><%= user.email %></td>
    <td><%= link_to 'Show', user %></td>
     <% if session[:unsername] == "admin" && session[:password] == "password" %>
    <td><%= link_to 'Edit', edit_user_path(user) %></td>
    <td><%= link_to 'Destroy', user, :confirm => 'Are you sure?', :method => :delete %></td>
     <% end %>
  </tr>
<% end %>
</table>

<br />
<% if session[:unsername] == "admin" && session[:password] == "password" %>
<%= link_to 'New User', new_user_path %>
<% end %>
